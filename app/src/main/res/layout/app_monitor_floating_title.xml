<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="wrap_content"
       android:layout_height="20dp"
       android:orientation="horizontal"
       android:layout_margin="0dp"
       android:padding="0dp">
        <Button
            android:id="@+id/float_hide_btn"
            android:text="@string/float_fold"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@drawable/selector_floating_title"
            />
        <View android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/light_black"/>
        <Button
            android:id="@+id/float_stop_btn"
            android:text="@string/stop_monitor"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@drawable/selector_floating_title"
            />
        <View android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/light_black"/>
        <Button
            android:id="@+id/float_change_btn"
            android:text="@string/change_color"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:padding="0dp"
            android:background="@drawable/selector_floating_title"
            />
        <View android:layout_width="1px"
            android:layout_height="20dp"
            android:background="@color/light_black"/>
        <Button
            android:id="@+id/float_screenshot_btn"
            android:text="@string/screen_shoot"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:padding="0sp"
            android:background="@drawable/selector_floating_title"
            />
        <View android:layout_width="1px"
           android:layout_height="20dp"
           android:background="@color/light_black"/>
       <TextView
           android:text="@string/moving_bar"
           android:gravity="center"
           android:layout_width="50dp"
           android:layout_height="fill_parent"
           android:textColor="#fff"
           android:padding="0dp"
           android:background="@drawable/selector_floating_title" />
 </LinearLayout>