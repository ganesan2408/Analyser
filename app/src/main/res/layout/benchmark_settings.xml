<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.yhh.analyser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.yhh.widget.SwitchButton
            android:id="@+id/thermal_control_btn"
            style="@style/item"
            android:text="@string/settings_thermal_control"
            android:textSize="15sp"
            android:background="@drawable/selector_preference_header"
            android:checked="true"
            app:withTextInterval="6dp"
            android:layout_marginTop="10dp"
            app:frameDrawable="@drawable/switch_frame"
            app:stateDrawable="@drawable/selector_switch_state"
            app:stateMaskDrawable="@drawable/switch_state_mask"
            app:sliderDrawable="@drawable/selector_switch_slider"/>
    
    <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_preference_footer"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:text="@string/settings_benchmark_temp"/>
            <EditText
                android:id="@+id/start_temp_et"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20sp"
                android:paddingLeft="10sp"
                android:textSize="15sp"
                android:background="@drawable/rounded_edittext"
                android:inputType="number"
                android:hint="@string/settings_benchmark_temp_hint"
                android:gravity="center"/>
        </LinearLayout>
        
    <com.yhh.widget.SwitchButton
            android:id="@+id/loop_config_btn"
            style="@style/item"
            android:text="@string/settings_loop"
            android:background="@drawable/selector_preference_header"
            android:checked="true"
            app:withTextInterval="6dp"
            app:frameDrawable="@drawable/switch_frame"
            app:stateDrawable="@drawable/selector_switch_state"
            app:stateMaskDrawable="@drawable/switch_state_mask"
            app:sliderDrawable="@drawable/selector_switch_slider"/>
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/selector_preference_center">
	    <TextView
            android:layout_marginLeft="25sp"
	        android:id="@+id/cpu_big_title" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/settings_cpu_big_number"/>
	    <TextView
	        android:id="@+id/cpu_big_num_tv" 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/cpu_big_title"/>
	    <com.yhh.widget.rangebar.RangeBar 
			xmlns:custom="http://schemas.android.com/apk/res-auto" 
			android:id="@+id/cpu_big_num_bar" 
			android:layout_below="@id/cpu_big_title"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 
			android:layout_marginLeft="25sp"
			android:layout_marginRight="25sp"
			custom:tickCount="3" />
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_preference_center">
        <TextView
            android:id="@+id/cpu_small_title" 
            android:layout_marginLeft="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_cpu_small_number"/>
        <TextView
            android:id="@+id/cpu_small_num_tv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cpu_small_title"/>
        <com.yhh.widget.rangebar.RangeBar 
            xmlns:custom="http://schemas.android.com/apk/res-auto" 
            android:id="@+id/cpu_small_num_bar" 
            android:layout_below="@id/cpu_small_title"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            custom:tickCount="5" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_preference_center">
        <TextView
            android:id="@+id/cpu_big_freq_title" 
            android:layout_marginLeft="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_cpu_big_freq"/>
        <TextView
            android:id="@+id/cpu_big_freq_tv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cpu_big_freq_title"/>
        <com.yhh.widget.rangebar.RangeBar 
            xmlns:custom="http://schemas.android.com/apk/res-auto" 
            android:id="@+id/cpu_big_freq_bar" 
            android:layout_below="@id/cpu_big_freq_title"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            custom:tickCount="7" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_preference_center">
        <TextView
            android:id="@+id/cpu_small_freq_title" 
            android:layout_marginLeft="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_cpu_small_freq"/>
        <TextView
            android:id="@+id/cpu_small_freq_tv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cpu_small_freq_title"/>
        <com.yhh.widget.rangebar.RangeBar 
            xmlns:custom="http://schemas.android.com/apk/res-auto" 
            android:id="@+id/cpu_small_freq_bar" 
            android:layout_below="@id/cpu_small_freq_title"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            custom:tickCount="7" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_preference_footer">
        <TextView
            android:id="@+id/gpu_freq_title" 
            android:layout_marginLeft="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_gpu_freq_tv"/>
        <TextView
            android:id="@+id/gpu_freq_tv" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/gpu_freq_title"/>
        <com.yhh.widget.rangebar.RangeBar 
            xmlns:custom="http://schemas.android.com/apk/res-auto" 
            android:id="@+id/gpu_freq_bar" 
            android:layout_below="@id/gpu_freq_title"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="25sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            custom:tickCount="7" />
    </RelativeLayout>
</LinearLayout>