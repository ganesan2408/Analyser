<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
     <Button 
        android:id="@+id/log_common_parser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="启动"
        />
    <com.yhh.widget.numberprogressbar.NumberProgressBar
        android:id="@+id/log_loading"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="20dp"
        custom:progress="0"
        android:layout_centerInParent="true"
        android:visibility="gone"
        style="@style/NumberProgressBar_Passing_Green"
     />
    
    <ListView
        android:id="@+id/newLogList"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/log_common_parser"
        android:cacheColorHint="@color/light_purple"
        android:listSelector="@color/light_purple" />
</RelativeLayout>