<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/app_fl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/mix_gray">
        <ImageView
            android:id="@+id/about_logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
        <TextView
            android:id="@+id/about_logo_name"
            android:layout_below="@id/about_logo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="24sp"/>
        <TextView
            android:id="@+id/about_version"
            android:layout_below="@id/about_logo_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="20sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_update"
        android:layout_below="@id/app_fl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/version_update"
            android:layout_margin="16dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/update_seperation"
        android:layout_below="@id/about_update"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cbcbcb"/>

    <RelativeLayout
        android:id="@+id/about_help"
        android:layout_below="@id/about_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/menu_help"
            android:layout_margin="16dp"/>
    </RelativeLayout>
    <View
        android:id="@+id/help_seperation"
        android:layout_below="@id/about_help"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cbcbcb"/>

